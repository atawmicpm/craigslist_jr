<div class="post-form">
    <form action="/posts/<%= @post.id %>" method="post">
    <br/>
    <label>Email:</label>
    <input type="text" name="post[email]">
    <br/>
    <label>Title:</label>
    <input type="text" name="post[title]" value="<%= @post.title %>">
    <br/>

    <label>Price:</label>
    <input type="text" name="post[price]" value="<%= @post.price %>">
    <br/>
    
    <label>Description:</label>
    <input type="description" name="post[description]" value="<%= @post.description %>">
    <br/>
    
    <label>Category:</label>
    <select name="post[category_id]" class="btn dropdown-toggle clearfix btn-primary">
    <% @categories.each do |category| %>
    <% if category.id == @category.id %>
      <option value="<%= category.id %>" selected><%= category.name %></option>
    <% else %>
      <option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  <% end %>
  </select>
    <input type="hidden" name="post[id]" value="<%= @post.id %>">
    <input type="submit" value="Post!" class="btn btn-large btn-block btn-primary">
  </div>
